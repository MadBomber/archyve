<div class="bg-secondary-950">
  <div id="background" class="flex justify-center items-center w-screen h-screen bg-cover" data-controller="set-background-image" data-set-background-image-target="<%= random_bg_image %>">
    <div class="flex flex-col h-full">
      <div class="flex-1"></div>
      <div class="flex flex-col justify-center text-center">
        <div class="bg-secondary-950 bg-opacity-75 rounded-lg p-5">
          <%= image_tag "archyve.svg", title: "ARCHYVE", class: "pb-10" %>
          <div class="">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="field">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email", class: "rounded-md my-1 dark:bg-secondary-900 dark:text-secondary-100" %>
              </div>

              <div class="field">
                <%= f.password_field :password, autocomplete: "current-password", placeholder: "password", class: "rounded-md dark:bg-secondary-900 dark:text-secondary-100" %>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.hidden_field :remember_me, value: true %>
                </div>
              <% end %>

              <div class="actions">
                <%= f.submit "Sign in", class: "w-full rounded-lg py-1 px-3 my-2 text-center text-white dark:text-secondary-950 block font-medium bg-tertiary-700 dark:bg-tertiary-500 hover:bg-tertiary-800 hover:dark:bg-tertiary-400 cursor-pointer" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="flex-1 flex flex-col justify-end h-full items-center">
        <div class="text-sm text-secondary-500"><a target=top href="https://www.youtube.com/watch?v=JTaWeXJT_Oo">bg image source</a></div>
      </div>
    </div>
  </div>
</div>
